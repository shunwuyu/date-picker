@import "framework/_variables.styl"

.tqb-date-picker
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color #fff
  display flex
  flex-direction column
  transition all 0.2s
  -webkit-tap-highlight-color: rgba(0,0,0,0)

  &.static
    position relative

  &.hide
    display none !important

  &.out
    transform translate3d(0,2em,0)
    opacity 0
  
  .tqb-dp-container
    flex 1
    overflow-y auto
    -webkit-overflow-scrolling touch

@import "framework/_header.styl"
@import "framework/_labels.styl"
@import "framework/_calendar.styl"