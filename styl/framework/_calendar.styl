border-color = rgb(238,238,238)
point-radius = 6px
red = rgb(254,156,68)
orange = rgb(254,164,83)

.tqb-date-picker .tqb-dp-calendar-item
  header
    border-bottom 1px solid border-color
    margin-bottom root-font-size

    h4
      color aqua
      text-align center
      margin 0
      line-height 3.25
      font-weight normal

  ul
    display flex
    flex-wrap wrap
    margin 0
    padding 0
    border-bottom 1px solid border-color

    li
      list-style none
      min-width 14.285714%
      max-width 14.29%
      flex 1 1 14.285714%
      text-align center
      line-height 50px
      margin-bottom root-font-size

      for n in (0..6)
        saturday = 8 - n
        sunday = 9 - n

        &.empty-{n}
          counter-reset date
          flex n n 14.285714%*n
          min-width 14.285714%*n
          max-width 100%

          ~ :nth-child(7n + {saturday}),
          ~ :nth-child(7n + {sunday})
            color orange

      &:not(:first-child):before
        content counter(date)
        counter-increment date

      &.disabled
        color gray

      &.today
        position relative

        &:after
          content: ''
          position absolute
          width point-radius
          height point-radius
          line-height point-radius
          font-size point-radius
          background-color red
          border-radius 50%
          left 50%
          margin-left -(point-radius / 2)
          bottom .5em

      &.select
        &.start
          background radial-gradient(circle at center, aqua 0, aqua 68%,transparent 68%, transparent 100%)

          &.tails
            background radial-gradient(circle at center, aqua 0, aqua 68%,transparent 68%, transparent 100%), linear-gradient(to right, transparent 0, transparent 50%, alpha(aqua, .5) 50%, alpha(aqua, .5) 50%)

        &.end:not(.start)
          background radial-gradient(circle at center, aqua 0, aqua 68%,transparent 68%, transparent 100%), linear-gradient(to right, alpha(aqua, .5) 0, alpha(aqua, .5) 50%, transparent 50%, transparent 50%)

.scattered .select
  background radial-gradient(circle at center, aqua 0, aqua 68%,transparent 68%, transparent 100%)

.continuous .select
  background alpha(aqua, .5)